<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".available">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/available_courses"
        android:textSize="20sp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:minWidth="18dp"
                android:minHeight="18dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="#CA495F"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/course_icon1"
                        android:layout_width="70dp"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/exam1" />

                    <TextView
                        android:id="@+id/course_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/course_icon1"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:text="TNPSC"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:backgroundTint="@color/OrangeRed"
                android:minWidth="18dp"
                android:minHeight="18dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/course_icon2"
                        android:layout_width="70dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/exam2"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/course_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/course_icon2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black"
                        android:text="RRB"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="#17817B"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:minWidth="18dp"
                android:minHeight="18dp">

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/course_icon3"
                        android:layout_width="70dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:background="#E8E6E6"
                        android:src="@drawable/exam13" />

                    <TextView
                        android:id="@+id/course_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/course_icon3"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:text="UPSC"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:backgroundTint="@color/SaddleBrown"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:minWidth="18dp"
                android:minHeight="18dp">

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/course_icon4"
                        android:layout_width="70dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/LightPink"
                        android:src="@drawable/exam4" />

                    <TextView
                        android:id="@+id/course_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/course_icon4"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:text="GATE"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="#935693"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:minWidth="18dp"
                android:minHeight="18dp">

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/course_icon5"
                        android:layout_width="70dp"
                        android:layout_height="48dp"
                        android:background="#FCFCFF"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/exam14" />

                    <TextView
                        android:id="@+id/course_name5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/course_icon5"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:text="NEET"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:backgroundTint="#67A508"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:minWidth="18dp"
                android:minHeight="18dp">

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/course_icon6"
                        android:layout_width="70dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:src="@drawable/exam9" />

                    <TextView
                        android:id="@+id/course_name6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/course_icon6"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:text="IBPS"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:backgroundTint="#4D4DA5"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:minWidth="18dp"
                android:minHeight="18dp">

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/course_icon7"
                        android:layout_width="70dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:src="@drawable/exam12" />

                    <TextView
                        android:id="@+id/course_name7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/course_icon7"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:text="TET"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:backgroundTint="#D11C23"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:minWidth="18dp"
                android:minHeight="18dp">

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/course_icon8"
                        android:layout_width="70dp"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:src="@drawable/exam11" />

                    <TextView
                        android:id="@+id/course_name8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/course_icon8"
                        android:layout_marginTop="8dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:text="JEE"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="600dp"
        android:layout_marginStart="20dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/a_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/home5"/>

        <ImageView
            android:id="@+id/a_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="150dp"
            android:src="@drawable/arrow6"/>
    </LinearLayout>

</RelativeLayout>
