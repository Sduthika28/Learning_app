<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cbg11"
    android:id="@+id/courses">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/courses_in_progresses"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#305f72"
            android:letterSpacing="0.02"
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="600dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/home"/>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="600dp"
                android:src="@drawable/arrow3"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="11dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFE0E0"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingTop="25dp">

            <ImageView
                android:id="@+id/i1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/eco_i"/>

            <TextView
                android:id="@+id/t1"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="40dp"
                android:layout_toEndOf="@+id/i1"
                android:letterSpacing="0.03"
                android:text="@string/aptitude_ntnpsc_ssc_rrb"
                android:textColor="#305f72"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10_hours_10_minutes"
                android:layout_toEndOf="@+id/i1"
                android:layout_below="@+id/t1"
                android:layout_marginTop="-35dp"
                android:layout_marginStart="13dp"
                android:textColor="#f18c8e"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/v1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/play_button5"
                android:layout_toEndOf="@+id/t1"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:layout_marginTop="225dp"
        android:layout_marginStart="11dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#F1F1A8"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingTop="25dp">

            <ImageView
                android:id="@+id/i2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/maths_i"/>

            <TextView
                android:id="@+id/t2"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="40dp"
                android:layout_toEndOf="@+id/i2"
                android:letterSpacing="0.03"
                android:text="@string/mathematics_ntnpsc_ssc_rrb"
                android:textColor="#305f72"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10_hours_10_minutes"
                android:layout_toEndOf="@+id/i2"
                android:layout_below="@+id/t2"
                android:layout_marginTop="-35dp"
                android:layout_marginStart="13dp"
                android:textColor="#f18c8e"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/v2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/play_button2"
                android:layout_toEndOf="@+id/t2"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:layout_marginTop="350dp"
        android:layout_marginStart="11dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#A1E8A1"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingTop="25dp">

            <ImageView
                android:id="@+id/i3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/gs_i"/>

            <TextView
                android:id="@+id/t3"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="40dp"
                android:layout_toEndOf="@+id/i3"
                android:letterSpacing="0.03"
                android:text="@string/general_studies_ntnpsc"
                android:textColor="#305f72"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10_hours_10_minutes"
                android:layout_toEndOf="@+id/i3"
                android:layout_below="@+id/t3"
                android:layout_marginTop="-35dp"
                android:layout_marginStart="13dp"
                android:textColor="#f18c8e"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/v3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/play_button3"
                android:layout_toEndOf="@+id/t3"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:layout_marginTop="475dp"
        android:layout_marginStart="11dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#C8C8EC"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingTop="25dp">

            <ImageView
                android:id="@+id/i4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/polity_i"/>

            <TextView
                android:id="@+id/t4"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="40dp"
                android:layout_toEndOf="@+id/i4"
                android:letterSpacing="0.03"
                android:text="@string/RRB"
                android:textColor="#305f72"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10_hours_10_minutes"
                android:layout_toEndOf="@+id/i4"
                android:layout_below="@+id/t4"
                android:layout_marginTop="-35dp"
                android:layout_marginStart="13dp"
                android:textColor="#f18c8e"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/v4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/play_button4"
                android:layout_toEndOf="@+id/t4"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
